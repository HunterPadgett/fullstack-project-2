<div class="container">
    <div class="columns is-vertical-center is-centered" id="loginsignup">
        <div class="column is-one-quarter has-background-light box mt-2 mx-2" id="login">
            <h2 class="title">Login</h2>
            <form id="login-form">
                <div class="field">
                    <label for="username-login">Username</label>
                    <input type="username" class="input" id="user-login" placeholder="Enter Username">
                </div>
                <div class="field">
                    <label for="password-login">Password</label>
                    <input type="password" class="input" id="password-login" placeholder="Enter Password">
                </div>
                <button class="button is-black is-small" type="submit">Log in</button>
            </form>
        </div>
        <div class="column is-one-quarter has-background-light box mx-2" id="signup">
            <h2 class="title">Signup</h2>
            <form id="signup-form">
                <div class="field">
                    <label for="username-signup">Username</label>
                    <input type="username" class="input" id="username-signup" placeholder="Create a Username">
                </div>
                <div class="field">
                    <label for="password-signup">Password</label>
                    <input type="password" class="input" id="password-signup" placeholder="Create a Password">
                </div>
                <button class="button is-black is-small" type="submit">Sign up</button>
            </form>
        </div>
    </div>
</div>
<script src="./js/login.js"></script>